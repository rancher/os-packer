{
    "variables": {
        "version": "{{env `RANCHEROS_VERSION`}}",
        "build": "{{env `AWS_IMAGE_BUILD_NUMBER`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "name": "amazon-ebs-hvm",
            "region": "us-west-1",
            "ami_regions": [
                "eu-west-1"
            ],
            "source_ami": "ami-877794c3",
            "instance_type": "m3.medium",
            "ssh_username": "rancher",
            "ami_name": "rancheros-{{user `version`}}-hvm-test-{{user `build`}}",
            "ena_support": "true"
        },
        {
            "type": "amazon-ebs",
            "name": "amazon-ebs-ecs",
            "region": "us-west-1",
            "ami_regions": [
                "us-west-1"
            ],
            "source_ami": "ami-877794c3",
            "instance_type": "m3.medium",
            "ssh_username": "rancher",
            "ami_name": "rancheros-{{user `version`}}-test-{{user `build`}}-amazon-ecs-optimized",
            "ena_support": "true"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "VERSION={{user `version`}}"
            ],
            "script": "../scripts/install2disk"
        }
    ]
}
