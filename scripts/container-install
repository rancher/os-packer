#!/bin/bash

set -x -e

VERSION=v0.3.2-rc2
PACKER_BUILDER_TYPE=${PACKER_BUILDER_TYPE:?"PACKER_BUILDER_TYPE is not set"}

case ${PACKER_BUILDER_TYPE} in
    "virtualbox-iso")
        sudo touch /opt/user_config.yml
        sudo chown rancher:rancher /opt/user_config.yml
        cat >/opt/user_config.yml<<EOF
#cloud-config
ssh_authorized_keys:
  - ssh-rsa  vagrant insecure public key
EOF
        sudo system-docker run --net=host -it --privileged --entrypoint=/scripts/set-disk-partitions rancher/os:${VERSION} /dev/sda
        sudo system-docker run --volumes-from=user-volumes --net=host -it --privileged rancher/os:${VERSION} -d /dev/sda -t generic -c /opt/user_config.yml
        ;;
    "amazon-ebs")
        sudo system-docker run --volumes-from=user-volumes --net=host -it --privileged rancher/os:${VERSION} -d /dev/xvda -t amazon-ebs
        ;;
    "googlecompute")
        sudo system-docker run --volumes-from=user-volumes --net=host -it --privileged rancher/os:${VERSION} -d /dev/sda -t googlecompute
        ;;
    *)
        exit 1
        ;;
esac
