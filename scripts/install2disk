#!/bin/bash
set -e -x

VERSION=${VERSION:?"VERSION is not set YYYYHJY"}
PACKER_BUILDER_TYPE=${PACKER_BUILDER_TYPE:?"PACKER_BUILDER_TYPE is not set"}

echo "type: $PACKER_BUILDER_TYPE"
echo "name: $PACKER_BUILD_NAME"
env
echo "----------------------------------------"

case $PACKER_BUILD_NAME in

    "amazon-rancher")
        echo "building amazon-rancher"
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  resize_device: /dev/xvda
  services_include:
    rancher-server: true
  docker:
    engine: docker-1.12.6
EOF
        sudo system-docker run --volumes-from=user-volumes --net=host --privileged rancher/os:${VERSION} -d /dev/xvda -t amazon-ebs-hvm -c $(pwd)/cloud-config.yml --no-reboot --debug -p /dev/xvda1 --append "rancher.cloud_init.datasources=[\"ec2\"]"
        exit 0
        ;;

    "amazon-ebs-ecs")
        echo "building amazon-ebs-ecs"
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  resize_device: /dev/xvda
  services_include:
    amazon-ecs-agent: true
EOF
        sudo system-docker run --volumes-from=user-volumes --net=host --privileged rancher/os:${VERSION} -d /dev/xvda -t amazon-ebs-hvm -c $(pwd)/cloud-config.yml --no-reboot --debug -p /dev/xvda1 --append "rancher.cloud_init.datasources=[\"ec2\"]"
        exit 0
        ;;

esac

case ${PACKER_BUILDER_TYPE} in

    "virtualbox-iso")
        cat >vagrant.yml<<EOF
#cloud-config
ssh_authorized_keys:
  - ssh-rsa  vagrant insecure public key
EOF
        sudo ros install -d /dev/sda -f -c ./vagrant.yml --no-reboot
        ;;

    "amazon-ebs")
        echo "building amazon-ebs"
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  resize_device: /dev/xvda
EOF
        sudo system-docker run --volumes-from=user-volumes --net=host --privileged rancher/os:${VERSION} -d /dev/xvda -t $PACKER_BUILD_NAME -c $(pwd)/cloud-config.yml --no-reboot --debug -p /dev/xvda1 --append "rancher.cloud_init.datasources=[\"ec2\"]"
        ;;

    "googlecompute")
#cloud-config
rancher:
  cloud_init:
    datasources:
      - gce
EOF
        sudo system-docker run --volumes-from=user-volumes --net=host --privileged rancher/os:${VERSION} -d /dev/sda -t $PACKER_BUILDER_TYPE -c $(pwd)/cloud-config.yml --no-reboot --debug -p /dev/xvda1 --append "console=ttyS0 rancher.autologin=ttyS0 rancher.debug=true printk.devkmsg=on rancher.cloud_init.datasources=[\"gce\"]"
        ;;

    "qemu")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  cloud_init:
    datasources:
      - gce
EOF
        sudo ros install -i rancher/os:${VERSION} -d /dev/sda -c $(pwd)/cloud-config.yml --no-reboot --debug --append "console=ttyS0 rancher.autologin=ttyS0 rancher.debug=true printk.devkmsg=on rancher.cloud_init.datasources=[\"gce\"]"
        ;;

    *)
        echo "Unknown type" 1>&2
        exit 1
        ;;
esac
