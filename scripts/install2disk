#!/bin/bash
set -e -x

VERSION=v0.4.2-rc2
PACKER_BUILDER_TYPE=${PACKER_BUILDER_TYPE:?"PACKER_BUILDER_TYPE is not set"}

case $PACKER_BUILD_NAME in

    "amazon-ebs-ecs")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  environment:
    RESIZE_DEV: /dev/xvda
  services_include:
    resize-fs: true
    amazon-ecs-agent: true
  cloud_init:
    datasources:
      - ec2
EOF
        sudo system-docker run --volumes-from=user-volumes --net=host --privileged rancher/os:${VERSION} -d /dev/xvda -t amazon-ebs-hvm -c $(pwd)/cloud-config.yml
        exit 0
        ;;

esac

case ${PACKER_BUILDER_TYPE} in

    "virtualbox-iso")
        cat >vagrant.yml<<EOF
#cloud-config
ssh_authorized_keys:
  - ssh-rsa  vagrant insecure public key
EOF
        sudo ros install -d /dev/sda -f -c ./vagrant.yml --no-reboot
        ;;

    "amazon-ebs")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  environment:
    RESIZE_DEV: /dev/xvda
  services_include:
    resize-fs: true
  cloud_init:
    datasources:
      - ec2
EOF
        sudo system-docker run --volumes-from=user-volumes --net=host --privileged rancher/os:${VERSION} -d /dev/xvda -t $PACKER_BUILD_NAME -c $(pwd)/cloud-config.yml
        ;;

    "googlecompute")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  cloud_init:
    datasources:
      - gce
EOF
        sudo system-docker run --volumes-from=user-volumes --net=host --privileged rancher/os:${VERSION} -d /dev/sda -t $PACKER_BUILDER_TYPE -c $(pwd)/cloud-config.yml
        ;;

    "qemu")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  cloud_init:
    datasources:
      - gce
EOF
        sudo ros install -d /dev/sda -f -c ./cloud-config.yml --no-reboot
        ;;

    *)
        echo "Unknown type" 1>&2
        exit 1
        ;;
esac
