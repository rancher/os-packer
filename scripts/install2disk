#!/bin/bash

set -e -x

VERSION=v0.3.0

case ${PACKER_BUILDER_TYPE} in
    "virtualbox-iso" | "parallels-iso" )
        cat >vagrant.yml<<EOF
#cloud-config
ssh_authorized_keys:
  - ssh-rsa  vagrant insecure public key
rancher:
  network:
    interfaces:
      eth*:
        dhcp: false
      eth0:
        dhcp: true
      lo:
        address: 127.0.0.1/8
  services_include:
    ubuntu-console: true
EOF
        sudo /usr/sbin/rancheros-install -d /dev/sda -f -v ${VERSION} -t generic -c ./vagrant.yml
        ;;
    "amazon-ebs")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  debug: true
  services_include:
    ubuntu-console: true
  cloud_init:
    datasources:
      - ec2
EOF
        sudo /usr/sbin/rancheros-install -d /dev/xvda -f -v ${VERSION} -t $PACKER_BUILD_NAME -c ./cloud-config.yml
        ;;
    "googlecompute")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  debug: true
  services_include:
    ubuntu-console: true
  cloud_init:
    datasources:
      - gce
EOF
        sudo /usr/sbin/rancheros-install -d /dev/sda -f -v ${VERSION} -t $PACKER_BUILDER_TYPE -c ./cloud-config.yml
        ;;
    "qemu")
        cat >cloud-config.yml<<EOF
#cloud-config
rancher:
  debug: true
  services_include:
    ubuntu-console: true
  cloud_init:
    datasources:
      - gce
EOF
        sudo /usr/sbin/rancheros-install -d /dev/sda -f -v ${VERSION} -t generic -c ./cloud-config.yml
        ;;

    *)
        echo "Unknown type" 1>&2
        exit 1
        ;;
esac
